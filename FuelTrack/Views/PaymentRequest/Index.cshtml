@model IEnumerable<FuelTrack.Models.PaymentRequest>

@{
    ViewBag.Title = "请款单列表";
}

<h2>客户订单列表</h2>

<p>
    @Html.ActionLink("新建请款单", "Apply", new { stationId = ViewBag.StationAccountId })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Station.StationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartTimestamp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BankBranch)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Station.StationName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTimestamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankBranch)
            </td>
            <td>
                @if (ViewContext.HttpContext.User.IsInRole("Employee"))
                {
                    @Html.ActionLink("取消", "Withdraw", new { id = item.PaymentRequestId }); @Html.Label("|");
                }

                @if (ViewContext.HttpContext.User.IsInRole("FinanceManager"))
                {
                    @Html.ActionLink("财务审批", "FinancialApprove", new { id = item.PaymentRequestId }); @Html.Label("|");
                }

                @if (ViewContext.HttpContext.User.IsInRole("BusinessManager"))
                {
                    @Html.ActionLink("业务审批", "BusinessApprove", new { id = item.PaymentRequestId }); @Html.Label("|");
                }

                @Html.ActionLink("明细", "Details", new { id = item.PaymentRequestId })
            </td>
        </tr>
    }

</table>
